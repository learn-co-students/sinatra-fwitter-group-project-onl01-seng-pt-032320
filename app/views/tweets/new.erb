  <form action='/tweets' method="get">
    <input type="submit" id="submit" value="All Tweets">
  </form>
  &ensp;
  <form action='/logout' method="get">
      <input type="submit" id="submit" value="Log Out">
  </form>
  &ensp;
<h2>Write your new tweet.</h2>
<% if is_logged_in? %>
<%= @error %>
